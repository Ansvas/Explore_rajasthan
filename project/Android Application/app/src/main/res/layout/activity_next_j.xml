<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.practice_ner_project.NextJActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/appbar_famoustoy">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toolbar_famoustoy"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_famoustoy">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thewa Style"
            android:textColor="#303f9f"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:scaleType="center"
            android:background="@drawable/thewa"
            android:id="@+id/navigation_image6"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="#303f9f"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_product"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="The overall style of the thewa art is inherently traditional. The very basic structure and design spells Indian heritage and grandeur carried along from ancient times. Considering the contemporary designs and make of thewa jewellery, the introduction of beads and other stylized elements have reintroduced them in the fashion scene."/>       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Originated in:"
            android:textColor="#303f9f"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_description"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="The origin of this art lies in the beautiful lands of Pratapgarh Rajasthan."/>   <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prices in Rajasthan:"
            android:textColor="#303f9f"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_rate"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="Rs. 400 â€“5000/-"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market:"
            android:textColor="#303f9f"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_market"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="Bapu bazaar, Johri Bazaar and PratapGarh District."/>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/nextb"
            android:background="@drawable/download"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
</RelativeLayout>
